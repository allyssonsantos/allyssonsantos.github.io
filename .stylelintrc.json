{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier", "stylelint-config-idiomatic-order"],
  "ignoreFiles": "out/**/*",
  "rules": {
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ]
  }
}
