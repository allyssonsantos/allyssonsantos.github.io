{
  "name": "allyssonsantos.github.io",
  "version": "1.2.0",
  "description": "My personal website/blog",
  "private": true,
  "author": "Allysson Santos <contato@allysson.me>",
  "bugs": {
    "url": "https://github.com/allyssonsantos/allyssonsantos.github.io/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs && next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "lint:css": "npx stylelint '**/*.css'",
    "test": "jest",
    "prettier": "prettier --write .",
    "commit": "cz",
    "export": "next export",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d out -b gh-pages",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@next/font": "^13.0.5",
    "@sentry/nextjs": "^7.13.0",
    "@types/rss": "^0.0.29",
    "classnames": "^2.3.2",
    "contentlayer": "^0.2.9",
    "date-fns": "^2.29.3",
    "gh-pages": "^4.0.0",
    "next": "^13.0.5",
    "next-contentlayer": "^0.2.9",
    "next-pwa": "^5.6.0",
    "next-seo": "^5.14.1",
    "next-sitemap": "^3.1.32",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-feather": "^2.0.10",
    "reading-time": "^1.5.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.1.0",
    "rehype-highlight": "^5.0.2",
    "rehype-prism-plus": "^1.5.0",
    "rehype-slug": "^5.0.1",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "18.7.18",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lefthook": "^1.1.1",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.12.1",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "4.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm run deploy"
        }
      ]
    ]
  }
}
