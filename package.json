{
  "name": "allyssonsantos.github.io",
  "version": "1.10.0",
  "description": "My personal website/blog",
  "private": true,
  "author": "Allysson Santos <contato@allysson.me>",
  "bugs": {
    "url": "https://github.com/allyssonsantos/allyssonsantos.github.io/issues"
  },
  "scripts": {
    "dev": "next dev",
    "build": "contentlayer build && next build",
    "postbuild": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs && next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "lint:css": "npx stylelint '**/*.css'",
    "test": "contentlayer build && vitest run",
    "prettier": "prettier --write .",
    "commit": "cz",
    "export": "npm run build && next export",
    "analyze": "ANALYZE=true next build",
    "predeploy": "npm run export",
    "deploy": "gh-pages -d out -b gh-pages --dotfiles",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "2.13.10",
    "@codesandbox/sandpack-themes": "2.0.21",
    "@sentry/nextjs": "^8.4.0",
    "@svgr/webpack": "8.1.0",
    "@types/rss": "^0.0.29",
    "class-variance-authority": "0.7.0",
    "classnames": "2.5.1",
    "contentlayer": "0.3.4",
    "date-fns": "3.6.0",
    "firebase": "10.12.1",
    "focus-trap-react": "10.2.3",
    "gh-pages": "6.1.1",
    "i18next": "23.11.5",
    "next": "14.2.3",
    "next-contentlayer": "0.3.4",
    "next-i18next": "15.3.0",
    "next-images": "1.8.5",
    "next-language-detector": "1.1.0",
    "next-pwa": "5.6.0",
    "next-seo": "6.5.0",
    "next-sitemap": "4.2.3",
    "next-themes": "0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-feather": "2.0.10",
    "react-i18next": "14.1.2",
    "reading-time": "1.5.0",
    "rehype-accessible-emojis": "0.3.2",
    "rehype-autolink-headings": "7.1.0",
    "rehype-code-titles": "1.2.0",
    "rehype-highlight": "7.0.0",
    "rehype-prism-plus": "2.0.0",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.0",
    "rss": "1.2.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.4.19",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/release-notes-generator": "^11.0.3",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^13.4.0",
    "@types/node": "18.7.18",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^24.0.0",
    "lefthook": "^1.4.3",
    "next-fonts": "^1.5.1",
    "next-transpile-modules": "^10.0.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.6",
    "stylelint": "^15.10.1",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.1.5",
    "vitest": "^1.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm run deploy"
        }
      ]
    ]
  }
}
