.categorylink
  background-color #fff
  border 1px solid #ccc
  border-radius(5px)
  color #000
  cursor pointer
  display inline-block
  font-size pxToEm(12)
  padding 5px
  text-decoration none
  transition(background-color 0.3s)

  &:hover, &:focus
    background-color #333
    color #fff
    transition(background-color 0.3s)